<!DOCTYPE html>
<html>
  <head>
    <title>Desafio Programação 1</title>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
    <%= csrf_meta_tags %>
  </head>
    <body>
      <% flash.each do |key, message| %>
        <div class="alert <%= flash_class(key) %> alert-dismissible text-center" role="alert" id="flash-div"
          onclick="esconder_flash()" style="cursor: pointer">
          <%= message %>
        </div>
      <% end %>
      <section style="margin-top: 50px;">
        <%= yield %>
      </section>
    </body>
</html>
